{% extends '::base_connect.html.twig' %}

{% block breadscrums %}
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb"><a href="{{ url('app_home') }}" title="Go to Home" class="tip-bottom"><i
                        class="icon-home"></i> {{ 'Home'|trans }}</a> <a href="#"
                                                                         class="current">{{ 'Judokas'|trans }}</a></div>
        <h1>{{ 'Judokas'|trans }}</h1>
    </div>
    <!--End-breadcrumbs-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@AppBundle/Resources/public/js/jquery.ui.custom.js'
    '@AppBundle/Resources/public/js/jquery.ui.custom.js'
    '@AppBundle/Resources/public/js/bootstrap.min.js'
    '@AppBundle/Resources/public/js/jquery.dataTables.min.js'
    '@AppBundle/Resources/public/js/jquery.dataTables.min.js'
    '@AppBundle/Resources/public/js/matrix.js'
    '@AppBundle/Resources/public/js/matrix.tables.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <hr>
        <div class="btn-group" role="group">
            <a class="btn btn-primary" href="{{ url('app_judoka_add') }}">
                <li class="icon-plus"></li>
                &nbsp;{{ 'Membre'|trans }}</a>
        </div>
        <div class="row-fluid">
            <div class="widget-box">
                <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                    <h5>{{ 'Liste des judokas'|trans }}</h5>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered data-table">
                        <thead>
                        <tr>
                            <th style="width: 5%"></th>
                            <th style="width: 30%">{{ 'Pr√©nom'|trans }}</th>
                            <th style="width: 30%">{{ 'Nom de famille'|trans }}</th>
                            <th style="width: 10%">{{ 'Date de naissance'|trans }}</th>
                            <th style="width: 10%">{{ 'Sexe'|trans }}</th>
                            <th style="width: 5%">{{ 'Action'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for member in members %}
                            <tr class="gradeX">
                                {% if member.avatar is empty %}
                                    {% set img = 'uploads/avatars/avatar-'~member.sex.cod~'.jpg'  %}
                                {% else %}
                                    {% set img = 'uploads/avatars/'~member.avatar  %}
                                {% endif %}
                                <td><img class="img-circle" src="{{ img | imagine_filter('my_thumb') }}" /></td>
                                <td>{{ member.firstName }}</td>
                                <td>{{ member.lastName }}</td>
                                <td>{{ member.birthday.format('d/m/Y') }}</td>
                                <td>{{ member.sex.lib }}</td>
                                <td>
                                    <a href="{{ url('app_judoka_detail', {'id': member.id}) }}" class="btn btn-mini btn-info"><span class="icon-eye-open"></span></a>&nbsp;
                                    <a href="{{ url('app_judoka_update', {'id': member.id} ) }}"  class="btn btn-mini btn-warning"><span class="icon-edit"></span></a>&nbsp;
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}